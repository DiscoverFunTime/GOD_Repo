
extends ../layout.jade


block scripts
 script(type="text/javascript" src="js/clans.js")



block content
 div.views
  div(class='views view-main') 
     div(class="panel-overlay")
     div(class="panel panel-right panel-cover")
        div(class="content-block" style='background-color:crimson; width:100%; height:100%')
          p content goes here ...
          p more content
          a(href="/clans/new" class="link external") New Clan
          a(href="#" data-panel="right" class="close-panel") Close me
     .navbar
      .navbar-inner
        .left.sliding
          a(href="/").back.link
            i.icon.icon-back
            span Back
        .center.sliding Clan Posts
        .right
          a(href="#" data-panel="right" class='open-panel link icon-only')
           i.icon.icon-bars
                        //- a(href="/settings").open-panel.link.icon-only 
            
     .pages.navbar-through
      .page(data-page="infinite-scroll")
        .page-content.infinite-scroll(data-distance="50")
          div(class='content-block-title' style='font-size:2.1em; color: blue') Dogpatch Explorers
          .list-block.center
            ul
              -for (i = 1; i <= 10; i++)
                li.item-content
                  .item-inner
                    div(class='item-title' style='margin:0 auto') 
                      img(src='http://lorempixel.com/600/600')
                      //- img(src="http://lorempixel.com/"Math.floor((Math.random() * 200) + 400)}"/"{Math.floor((Math.random() * 200) + 400)})
     div(class="toolbar toolbar-bottom" style="bottom:0px; opacity:0.7")
          div(class="toolbar-inner")
            a(href="/search" class="link external") Search
            a(href="#" class="link external") Photo
            a(href="/" class="link external") HOME
            a(href="/users" class="link external") User Page
            a(href="/clans" class="link external") Clan Page