
extends ../layout.jade


block scripts
 script(type="text/javascript" src="js/clans.js")



block content
 div.views
  div(class='views view-main') 
     div(class="panel-overlay")
     div(class="panel panel-right panel-cover" style='background-color:#D7D0FF; opacity:0.7; width:70%; height:100%')
        div(class="content-block" style='margin: 200px 0; ')
          ul(style='list-style-type:none; margin:0 auto; ')
           br
           li
             a(href="/clans/new" class="link external" style='color:black') create new clan
           br
           li
             a(href="#" style='color:black') list clan members (newpage?)
           br
           li
             a(href="/clans/new" class="link external" style='color:black') New Clan
     .navbar
      .navbar-inner
        .left.sliding
          a(href="/").back.link
            i.icon.icon-back
            span Back
        .center.sliding Clan Index
        .right
          a(href="#" data-panel="right" class='open-panel link icon-only')
           i.icon.icon-bars
                        //- a(href="/settings").open-panel.link.icon-only 
            
     .pages.navbar-through
      .page(data-page="infinite-scroll")
        .page-content.infinite-scroll(data-distance="50")
          //- div(class='content-block-title' style='font-size:2.1em; color: blue') Dogpatch Explorers
          h3(style='text-align:center; color:crimson') Display top 10 clans
          ul
           each clan in clans
            li
             h4
               a(href="/clans/#{clan.id}")= clan.clan_name
             p= clan.intro
             form(action="/clans/#{clan.id}/user" method="POST")
               input(type="submit" value="join this clan")



          //- h1(style='text-align:center') Feeds:
            //- h1 This is the FAKE Clan index page
            //- p It shows top 10 clans with hightest scores
            //- hr
          .list-block.center
            ul
              -for (i = 1; i <= 10; i++)
                li.item-content
                  .item-inner
                    div(class='item-title' style='margin:0 auto') 
                      img(src='http://lorempixel.com/600/600')
                      //- img(src="http://lorempixel.com/"Math.floor((Math.random() * 200) + 400)}"/"{Math.floor((Math.random() * 200) + 400)})
