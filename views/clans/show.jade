extends ./clanLayout.jade

block content
 div.views
  div(class='views view-main') 
     div(class="panel-overlay")
     div(class="panel panel-right panel-cover" style='background-color:#D7D0FF; opacity:0.7; width:70%; height:100%')
        div(class="content-block" style='margin: 130px 0; ')
          ul(style='list-style-type:none; margin:0 auto; font-size:1em ')
           li(style='color:black;') 
            Span Edit Clan
             br
             br
             br
             form(action="/clans/#{clanInfo.id}?_method=put" method="POST" style='color:black')
               label Clan Name
               br
               input(type="text" name="clan[clan_name]" value='#{clanInfo.clan_name}')
               br
               label Specialty
               br
               input(type="text" name="clan[intro]" value='#{clanInfo.intro}')
               br
               input(type="submit" value="submit")
           br
           br 
           //- li
           //-   a(href="#" style='color:black') list clan members (newpage?)
     .navbar
      .navbar-inner
        .left.sliding
          a(href="/clans" class='external').back.link
            i.icon.icon-back
            span Back
        .center.sliding #{clanInfo.clan_name}'s Page
        .right
          a(href="#" data-panel="right" class='open-panel link icon-only')
           i.icon.icon-bars
                        //- a(href="/settings").open-panel.link.icon-only 
            
     .page-content(style='padding-top: 150px')
      div
        h2 #{clanInfo.clan_name}
        br
        br
        h4 #{clanInfo.intro}
