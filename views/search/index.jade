block content
 div(class="panel-overlay")
 div(class="panel panel-right panel-cover")
    div(class="content-block" style='background-color:crimson; width:100%; height:100%')
      p content goes here ...
      p more content
      a(href="#" data-panel="right" class="close-panel") Close me
 .navbar
  .navbar-inner
    .left.sliding
      a(href="/").back.link
        i.icon.icon-back
        span Back
    .center.sliding Search stuff
    .right
      a(href="#" data-panel="right" class='open-panel link icon-only')
       i.icon.icon-bars
                    //- a(href="/settings").open-panel.link.icon-only
        
 .pages.navbar-through
  .page(data-page="infinite-scroll")
    form(class="searchbar" action="/search" method="POST")
     div(class="searchbar-input")
       input(type="search" name="tag" placeholder="search all tag")

      //- a(href="#" class="searchbar-clear")
      //- a href="#" class="searchbar-cancel">Cancel</a>
    div(class="searchbar-overlay")
    .page-content
      div(style="display:inline-flex; flex-wrap:wrap")
        each result in results
          div(style="margin:10px")
            a(href="/posts/#{result.p_id}")
              img(src=result.url style="height:100px; width:100px")
